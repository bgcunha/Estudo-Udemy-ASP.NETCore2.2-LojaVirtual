@model LojaVirtual.Models.Colaborador
@{
    ViewData["Title"] = "Atualizar";
}

<h1>Atualizar</h1>

<form method="post">
    <input asp-for="Id" type="hidden" />
    <input asp-for="Tipo" type="hidden" />   

    <div class="mb-3">
        <label asp-for="Nome" class="form-label"></label>
        <input asp-for="Nome" class="form-control" placeholder="Digite o nome">
        <span asp-validation-for="Nome" class="text-danger"></span>
    </div>
    <div class="mb-3">
        <label asp-for="Email" class="form-label"></label>
        <input asp-for="Email" class="form-control" placeholder="Digite o e-mail">
        <span asp-validation-for="Email" class="text-danger"></span>
    </div>    

    <button type="submit" class="btn btn-success">Salvar</button>
    <a asp-action="Index" class="btn btn-primary">Voltar</a>
</form>

